@using Northwind.Models
@model IEnumerable<Discount>

<div>
    <h2 class="mt-3"><i class="fas fa-tag"></i> Product Discounts</h2>
    <form method="post" asp-action="Add">
        <button type="submit" class="btn btn-outline-primary mb-3">Add Discount</button>
    </form>
</div>

<div class="list-group">
    @foreach (Discount d in Model)
    {
        
        <div class="list-group-item">
            @d.Title<br />
            @d.Description<br />
            Discount Starts: <i>@d.StartTime.ToString("MM/dd/yyyy")</i><br />
            Discount Expires: <i>@d.EndTime.ToString("MM/dd/yyyy")</i><br />
            <a href="#" class="code" data-code="@d.Code" data-product="@d.Title"><i class="far fa-hand-point-right"></i> Discount Code</a><br/>
            <a asp-action="Edit" asp-route-id="@d.DiscountID">Edit</a>
            <a href="#">Delete</a>
        </div>
    }
</div>

@section scripts
    {
    <script src="/js/client.js"></script>
}

